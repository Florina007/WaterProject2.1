<Window x:Class="WpfApp1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Login" Height="650" Width="800">
    <Grid>
        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="305,341,0,0" Click="Button_Click"/>
        <Label Content="User name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="207,164,0,0"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="330,168,0,0" />
        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="207,232,0,0"/>
        <PasswordBox x:Name="passBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="330,232,0,0" Width="120"/>

    </Grid>
</Window>
